{% if settings.featured_blog | length > 0 and blogs[settings.featured_blog] is not empty %}
  {% set blog = blogs[settings.featured_blog] %}
  <div class="container margin-bottom">
    <div class="row">
      <div class="col-xs-12 section__title">
        <h2 class="section-heading">{{ settings.featured_blog_title | capitalize }}</h2>
      </div>
    </div>
    <div class="row front__blog__grid">
      {% for post in blog.posts | slice(0, 3) %}
      <div class="col-xs-12 col-sm-4">
        <div class="blog-grid-item">
            {% if post.image_url is not null %}
          <a class="blog-grid-item__thumb-link grid-item__thumb-image " href="/blogs/{{ blog.permalink }}/posts/{{ post.permalink }}" style="background-image: url('{{ post.image_url }}&w=370&h=240&fit=crop');">
            {% else %}
          <a class="blog-grid-item__thumb-link grid-item__thumb-no-image " href="/blogs/{{ blog.permalink }}/posts/{{ post.permalink }}">
            {% endif %}
          </a>
          <h5 class="blog-grid-item__title">
            <a href="/blogs/{{ blog.permalink }}/posts/{{ post.permalink }}">{{ post.title | escape }}</a>
          </h5>
          <p class="blog-grid-item__summary">{{ post.summary | truncate_words(30) }}</p>
          <a href="/blogs/{{ blog.permalink }}/posts/{{ post.permalink }}" class="btn blog-read-more">Leer más</a>
        </div>
      </div>
      {% endfor %}
    </div>
  </div>
{% else %}
  <div class="container placeholder-hover">
    <div class="placeholder-helper">
      <div class="placeholder-info text-center">
        <h3>¡Falta poco!</h3>
        <p>Esta sección desplegará el blog que asignes como destacado en la configuración de tu tema.</p>
        <p><a href="/admin/blogs" class="btn btn-placeholder">Administrar Blogs</a>
        <a href="/admin/themes" class="btn btn-placeholder">Ir a sección de temas</a></p>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-12 section__title">
        <h2 class="section-heading">Un poco de inspiración</h2>
      </div>
    </div>
    <div class="row front__blog__grid">
      <div class="col-xs-6 col-md-3">
        {% include '_blog-placeholder.twig' %}
      </div>
      <div class="col-xs-6 col-md-3">
        {% include '_blog-placeholder.twig' %}
      </div>
      <div class="col-xs-6 col-md-3 hidden-xs hidden-sm">
        {% include '_blog-placeholder.twig' %}
      </div>
      <div class="col-xs-6 col-md-3 hidden-xs hidden-sm">
        {% include '_blog-placeholder.twig' %}
      </div>
    </div>
  </div>
{% endif %}


