{% if settings.slide_1 or settings.slide_2 or settings.slide_3 %}
  <div class="slider">
    {% for i in 1..3 %}
      {% set slide = 'slide_'~i %}
        {% if settings[slide] %}
          {% if settings['slide_'~i~'_img_background'] is not empty and settings['slide_'~i~'_img_background'] is defined %}
            {% set slide_bg = settings['slide_'~i~'_img_background'] %}
            <div class="slide {{ slide }}" style="background-image: url('{{ settings['slide_'~i~'_img_background'] }}');">
          {% else %}
            <div class="slide {{ slide }}">
          {% endif %}
            <div class="container">
              {% if settings.slider_has_overlay %}
              <div class="slider_overlay"></div>
              {% endif %}
              <div class="row">
                <div class="col-sm-12 slide{{i}}">
                  <h1 class="title title__big title--white">{{ settings['slide_'~i~'_title'] }}</h1>
                  <h2 class="title title__medium title--white title--uppercase"><em>{{ settings['slide_'~i~'_description'] }}</em></h2>
                  {% if settings['slide_'~i~'_btn'] and settings['slide_'~i~'_btn_text'] %}
                  <a class="btn btn-base btn__slide {% if settings['slider_text_has_overlay'] %}btn__slide--shadow{% endif %}" href="{{ settings['slide_'~i~'_btn_buy_link'] }}" style="border: 1px solid {{ settings['slide_'~i~'_btn_color'] }}">{{ settings['slide_'~i~'_btn_text'] }}</a>
                  {% endif %}
                </div>
              </div>
            </div>
          </div>
      {% endif %}
    {% endfor %}
  </div>
{% endif %}




