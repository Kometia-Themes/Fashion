<form action="/cuenta/login" method="POST" role="form" class="login-form">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-md-4 col-md-offset-2">
      <div class="form-group">
        <div class="input-group input-group-lg login-form__input">
          <input type="email" class="form-control input-lg" id="email" name="email" placeholder="Correo electrónico" required>
        </div>
      </div>
    </div>
    <div class="col-xs-12 col-sm-6 col-md-4">
      <div class="form-group">
        <div class="input-group input-group-lg login-form__input">
          <input type="password" class="form-control input-lg" id="password" name="password" placeholder="Contraseña" required>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">
      <div class="form-group text-center">
        <div class="checkbox">
          <label>
            <input type="checkbox" name="remember">&nbsp;Recordarme
          </label>
        </div>
      </div>
      <div class="form-group">
        <input class="btn btn-action btn-block login-form__button" type="submit" name="submit" id="submit" value="&nbsp; Iniciar sesión &nbsp;">
      </div>
      <a href="/cuenta/recuperar">¿Olvidaste tu contraseña?</a>
    </div>
  </div>
</form>