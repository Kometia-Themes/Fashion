<li class="category__sidebar-item">
  {% if category.permalink == current.permalink %}
    <i class="fa fa-angle-right" aria-hidden="true"></i> {{ category.title | title }}
  {% else %}
    <a class="category__item-link" href="/categorias/{{ category.permalink }}"><i class="fa fa-angle-right" aria-hidden="true"></i>{{ category.title | title }}</a>
  {% endif %}
  {% for sub_category in category.children %}
    {% include '_category_tree_item.twig' with { 'category' : sub_category, 'current'  : current } only %}
  {% endfor %}
</li>