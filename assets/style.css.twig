}
@media(min-width: 1200px) {
  .margin-bottom { margin-bottom: 3em; }
}
.divider {
  margin-left: -15px;
  border-top: 1px solid {{ settings.body_background_color | darken_color }};
}

/* * * * * * * * */
/* Notifications */
/* * * * * * * * */
.notifications { background-color: transparent; border:0; border-radius: 0 !important; padding-top: .6em; padding-bottom: .6em;}
.notifications.type-errors {border-bottom: 1px solid #ebccd1;}
.notifications.type-errors .notifications__close {color: #a94442;}
.notifications.type-success {border-bottom: 1px solid #bedabf;}
.notifications.type-success .notifications__close {color: #3c763d;}
.notifications.type-warning {border-bottom: 1px solid #e4e2b9;}
.notifications.type-warning .notifications__close {color: #8a6d3b;}
.notifications .notifications__message {}

/* * * * * * * * */
/* Placeholders  */
/* * * * * * * * */
.placeholder-hover {
  position: relative;
  margin-bottom: 2em;
}
.placeholder-hover:hover .placeholder-helper {
  opacity: 1;
}
.placeholder-hover .placeholder-helper {
  opacity: 0;
  position: absolute;
  width: 100%;
  height: 100%;
  background: rgba(255, 255, 255, 0.8);
  top: 0;
  left: 0;
  z-index: 999;
  transition: all .3s;
}
.placeholder-hover .placeholder-helper .placeholder-info {
  max-width: 80%;
  margin: 0 auto;
  position: absolute;
  text-align: center;
  top: 25%;
  left: 10%;
  right: 10%;
  background: #FAFAFA;
  padding: 25px;
}
.placeholder-hover .placeholder-helper .placeholder-info p {
  color: #444444;
  margin-bottom: 1em;
}
.placeholder-hover .placeholder-helper .btn-placeholder {
  color: #444444;
  border-color: #999999;
  width: auto;
  padding-left: 1.6em;
  padding-right: 1.6em;
  margin: 0 1em 1em;
}
.placeholder-hover .placeholder-helper .btn-placeholder:hover {
  color: {{ settings.brand_main_color | darken_color }};
  border-color: {{ settings.brand_main_color | darken_color }};
}

