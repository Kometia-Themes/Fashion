/* * * * * * * */
/* Global Vars */
/* * * * * * * */
body {
  color: {{ settings.body_font_color }};
  font-size: {{ settings.body_font_size }};
  line-height: 1.6;
  background-color: {{ settings.body_background_color }};
  font-family: {{ settings.base_font | remove('Google+') | replace({'+': ' '}) }}, sans-serif;
}

/* * * * * * */
/* Reset Btn */
/* * * * * * */
a, button { transition: all .3s ease 0s; }
a { color: {{ settings.main_link_color }}; }
a:hover { color: {{ settings.main_link_color_hover }}; }
a:active, a:focus { outline: none;}
:focus { outline: none !important;}
::-moz-focus-inner { border: 0 !important;}
.btn {
  border: 1px solid {{ settings.body_font_color }};
  color: {{ settings.body_font_color }};
  background-color: transparent;
  border-radius: 0;
  text-transform: uppercase;
}
.btn:hover, .btn:focus {
  border: 1px solid {{ settings.brand_main_color }};
  color: {{ settings.brand_main_color }};
}
.btn-lg {}
.btn-base {
  background-color: transparent;
  border-radius: 0;
  color: {{ settings.body_font_color }};
  border: 1px solid {{ settings.body_font_color }};
  text-transform: uppercase;
  letter-spacing: 3px;
}

.btn-action {}

.btn-big {
  width: 100%;
}

/* * * * * */
/* Helpers */
/* * * * * */
.margin-top { margin-top: 2em; }

.margin-bottom { margin-bottom: 3em; }
@media(max-width: 767px) {
  .margin-bottom { margin-bottom: 1.6em; }
}
@media(min-width: 768px) {
  .margin-bottom { margin-bottom: 2em; }
}
@media(min-width: 992px) {
